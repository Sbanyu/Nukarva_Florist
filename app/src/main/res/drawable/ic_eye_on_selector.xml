<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When focused, show black -->
    <item android:drawable="@drawable/ic_eye_on_black" android:state_focused="true" />

    <!-- When not empty (has text), show black -->
    <item android:drawable="@drawable/ic_eye_on_black" android:state_hovered="true" />

    <!-- Default state -->
    <item android:drawable="@drawable/ic_eye_on" />
</selector>