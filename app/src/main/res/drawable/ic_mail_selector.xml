<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When focused, show border -->
    <item android:drawable="@drawable/ic_mail_fill" android:state_focused="true" />

    <!-- When not empty (has text), show border -->
    <item android:drawable="@drawable/ic_mail_fill" android:state_hovered="true" />

    <!-- Default state - no border -->
    <item android:drawable="@drawable/ic_mail" />
</selector>