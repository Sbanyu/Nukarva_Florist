<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        app:statusBarForeground="@color/white">

        <!-- Toolbar -->
        <include android:id="@+id/toolbar" layout="@layout/toolbar_with_favorite"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/toolbar_height_default"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:orientation="vertical">

            <!-- Delivery Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delivery to"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/urbanist_bold"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/tvChangeAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change"
                android:fontFamily="@font/urbanist_medium"
                android:textColor="@color/main_color_500"
                android:textStyle="bold"
                android:textSize="14sp"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/outlined_button_background"
                android:backgroundTint="@color/disable"
                android:padding="16dp"
                android:layout_marginTop="8dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardImage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/fill_color_04">

                    <ImageView
                        android:id="@+id/imgProduct"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_map" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/cardImage"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Office"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/urbanist_bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12–44 O'Connell St, 2747, Australia"
                        android:textColor="@color/font_grey"
                        android:fontFamily="@font/urbanist_medium"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Product Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Product"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/urbanist_bold"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/tv_count_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="{Count Product}"
                    android:fontFamily="@font/urbanist_bold"
                    android:textColor="@color/font_grey"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tv_order_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:clipToPadding="false"
                android:background="@color/white"
                tools:listitem="@layout/item_order"
                tools:itemCount="2"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/disable"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subtotal"
                android:layout_weight="1"
                android:textColor="@color/fill_color_02"
                android:fontFamily="@font/urbanist_medium"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSubtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textSize="14sp"
                android:fontFamily="@font/urbanist_bold"
                android:textColor="@color/black" />
            </LinearLayout>


            <!-- Add Voucher -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_dotted_border"
                android:padding="16dp"
                android:layout_marginTop="12dp">

                <ImageView
                    android:id="@+id/imgMap"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_voucher"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Voucher"
                    android:textColor="@color/font_grey"
                    android:fontFamily="@font/urbanist_medium"
                    android:textSize="14sp"
                    android:layout_toEndOf="@id/imgMap"
                    android:layout_marginStart="8dp"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <!-- Shipment -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shipment"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/urbanist_bold"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/tv_change_shipment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change"
                    android:fontFamily="@font/urbanist_medium"
                    android:textColor="@color/main_color_500"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/outlined_button_background"
                android:backgroundTint="@color/disable"
                android:padding="16dp"
                android:layout_marginTop="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardImageShipment"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/fill_color_04">

                    <ImageView
                        android:id="@+id/imgShipment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_map" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/cardImageShipment"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Si Cepat Express"
                        android:fontFamily="@font/urbanist_bold"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arrives in 2–4 in weekdays"
                        android:textColor="@color/font_grey"
                        android:textSize="12sp"
                        android:fontFamily="@font/urbanist_medium"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$3.00"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/urbanist_bold"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Metode Pembayaran"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/urbanist_bold"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/tv_change_payment_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat semua"
                    android:fontFamily="@font/urbanist_bold"
                    android:textColor="@color/main_color_500"
                    android:textSize="14sp"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_payment"
                tools:itemCount="2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Summary"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:fontFamily="@font/urbanist_bold"
                android:textColor="@color/black"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp"
                android:background="@drawable/outlined_button_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Subtotal -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sub Total"
                            android:textColor="@color/font_grey"
                            android:textSize="14sp"
                            android:fontFamily="@font/urbanist_regular" />

                        <TextView
                            android:id="@+id/tvSubTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$9.12"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/urbanist_bold" />
                    </LinearLayout>

                    <!-- Delivery Cost -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Delivery cost"
                            android:textColor="@color/font_grey"
                            android:textSize="14sp"
                            android:fontFamily="@font/urbanist_regular" />

                        <TextView
                            android:id="@+id/tvDeliveryCost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$3.00"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/urbanist_bold" />
                    </LinearLayout>

                    <!-- Application Fees -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Application Fees"
                            android:textColor="@color/font_grey"
                            android:textSize="14sp"
                            android:fontFamily="@font/urbanist_regular" />

                        <TextView
                            android:id="@+id/tvAppFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0.50"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/urbanist_bold" />
                    </LinearLayout>

                    <!-- Discount -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Discount"
                            android:textColor="@color/font_grey"
                            android:textSize="14sp"
                            android:fontFamily="@font/urbanist_regular" />

                        <TextView
                            android:id="@+id/tvDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-$1.00"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/urbanist_bold" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/disable"
                        android:layout_marginBottom="12dp" />

                    <!-- Total -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Payment"
                            android:textColor="@color/main_color_500"
                            android:textSize="14sp"
                            android:fontFamily="@font/urbanist_bold" />

                        <TextView
                            android:id="@+id/tvTotalPayment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$11.62"
                            android:textColor="@color/main_color_500"
                            android:textSize="14sp"
                            android:fontFamily="@font/urbanist_bold" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Order Summary -->
    <LinearLayout
        android:id="@+id/bottomSummary"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingBottom="0dp"
        android:paddingHorizontal="24dp"
        android:gravity="center_vertical"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTotalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textColor="@color/font_grey"
                android:textSize="14sp"
                android:fontFamily="@font/urbanist_regular" />

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/urbanist_bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btnOrder"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:text="Order"
            android:textAllCaps="false"
            android:backgroundTint="@color/disable"
            android:textColor="@color/white"
            android:enabled="false"
            android:fontFamily="@font/urbanist_bold"
            android:background="@drawable/rounded_button"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
