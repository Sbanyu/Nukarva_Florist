<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="24dp">

    <!-- Checkbox -->
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkboxSelect"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:buttonTint="@color/main_color_500"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Product Image -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardImage"
        android:layout_width="72dp"
        android:layout_height="80dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/fill_color_04"
        app:layout_constraintStart_toEndOf="@id/checkboxSelect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_example_plants" />
    </androidx.cardview.widget.CardView>

    <!-- Product Name -->
    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hydroxyzine hydrochloride"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/urbanist_bold"
        app:layout_constraintStart_toEndOf="@id/cardImage"
        app:layout_constraintTop_toTopOf="@id/cardImage"
        android:layout_marginStart="8dp" />

    <!-- Dosage & Form -->
    <TextView
        android:id="@+id/tvType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:textColor="@color/font_grey"
        android:fontFamily="@font/urbanist_regular"
        app:layout_constraintStart_toStartOf="@id/tvProductName"
        app:layout_constraintTop_toBottomOf="@id/tvProductName"/>

    <!-- Price -->
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$7.00"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/urbanist_bold"
        app:layout_constraintStart_toStartOf="@id/tvType"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="2dp"/>

    <!-- Minus Button -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="end|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnDecrease"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_min" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:fontFamily="@font/urbanist_bold"
            android:layout_marginHorizontal="4dp" />

        <ImageView
            android:id="@+id/btnIncrease"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_add"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_delete"
            app:tint="@color/font_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
