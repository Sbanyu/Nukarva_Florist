<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/outlined_button_background"
    android:backgroundTint="@color/disable"
    android:padding="16dp"
    android:layout_marginTop="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardImagePembayaran"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardCornerRadius="99dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#F4F4F5">

        <ImageView
            android:id="@+id/imgPembayaran"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_wallet" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/cardImagePembayaran"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PlantifyPay"
            android:fontFamily="@font/urbanist_bold"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Rp 500.000"
            android:textColor="@color/font_grey"
            android:textSize="12sp"
            android:fontFamily="@font/urbanist_medium"/>
    </LinearLayout>

    <RadioButton
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:textIsSelectable="false"
        android:fontFamily="@font/urbanist_bold"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />
</RelativeLayout>